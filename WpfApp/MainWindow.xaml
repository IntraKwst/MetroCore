<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Welcome" Height="450" Width="800">
    <Grid x:Name="LoginPage" Margin="0,0,0,-6">
        <StackPanel Margin="10">
            <TextBlock Text="Username:" FontWeight="Bold" Margin="0,0,5,0"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Padding="5"/>
            <TextBlock Text="Password:" FontWeight="Bold" Margin="0,0,5,0"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Padding="5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button Content="Login" Click="LoginButton_OnClick" Margin="0,0,10,0"/>
                <Button Content="Create Account" Click="CreateAccountButton_OnClick"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
